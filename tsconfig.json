{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true, // konfliktlarni kamaytiradi
		"moduleResolution": "bundler", // Vite uchun eng yaxshisi (yoki "node")
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true, // any ni qattiq nazorat qiladi
		"jsx": "react-jsx", // eng muhimi shu! (React 17+ uchun)
		"types": ["node"], // agar kerak bo'lsa
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true // Vite ishlatganda odatda true
	},
	"include": ["src"]
}
