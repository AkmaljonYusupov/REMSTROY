{
	"compilerOptions": {
		"target": "ES2020", // yoki ESNext / ES2022
		"lib": [
			"ES2020", // Map, Set, Iterable, Promise.allSettled va h.k. uchun
			"ESNext",
			"DOM", // agar brauzerda ishlasa
			"DOM.Iterable"
		],
		"module": "ESNext",
		"moduleResolution": "bundler", // eng muhimi shu! (yoki "node16" / "nodenext")
		// yoki agar "bundler" ishlamasa: "node16"

		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true, // vaqtincha yordam berishi mumkin (lekin oxirida olib tashlash yaxshi)
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true, // json importlar uchun ↓
		"isolatedModules": true,
		"noEmit": true // vite ishlatganda ko‘pincha shunday bo‘ladi
	},
	"include": ["src"]
}
